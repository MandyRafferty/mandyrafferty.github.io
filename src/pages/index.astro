---
import Layout from '../components/Layout.astro';
import headerBg from '../assets/images/pittsburgh-grandview-overlook.jpg';
import office from '../assets/images/office.jpg';
import ProjectCard from '../components/ProjectCard.astro';

const mdPostsGlob = import.meta.glob('../content/myprojects/*.md', { eager: true });
const mdxPostsGlob = import.meta.glob('../content/myprojects/*.mdx', { eager: true });
const base = import.meta.env.BASE_URL;

const allPosts = [...Object.values(mdPostsGlob), ...Object.values(mdxPostsGlob)] as any[];
// const sortedPosts = allPosts
//   .sort((a: any, b: any) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
//   .slice(0, 3);
// Filter for featured projects and sort by featured_order
const featuredPosts = allPosts
  .filter(post => post.frontmatter.featured && post.frontmatter.featured_order) // Only posts with featured=true and featured_order
  .sort((a: any, b: any) => {
    // Sort by featured_order specifically for homepage
    const aOrder = a.frontmatter.featured_order;
    const bOrder = b.frontmatter.featured_order;
    return aOrder - bOrder;
  })
  .slice(0, 3); // Take only first 3 for homepage
---

<Layout title="Mandy Rafferty Portfolio" description="Engineering Projects" showSidebar={false}>
  <div class="landing-page">
    <!-- Hero Section -->
    <section class="hero" style={`background-image: url(${headerBg.src});`}>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1 class="hero-title">Mandy Rafferty</h1>
        <p class="hero-subtitle">Mechanical Engineer</p>
        <p class="hero-description">
          A mechanical engineering master's student at Carnegie Mellon University.
        </p>
        <hr class="hero-rule" />
        <div class="hero-actions">
          <a href={`${base}allprojects/`} class="btn btn-primary">Projects</a>
          <a href={`${base}contact/`} class="btn btn-secondary">Contact</a>
        </div>
      </div>
    </section>

    <!-- Featured Section -->
    <section class="demo-section" id="demo">
      <div class="container">
        <h2 class="section-title">Featured Projects</h2>
        
        {featuredPosts.length > 0 && (
          <div class="projects">
            {featuredPosts.map(post => {
              // Extract slug from file path
              const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
              return (
                <ProjectCard 
                  frontmatter={post.frontmatter} 
                  slug={slug}
                />
              );
            })}
          </div>
        )}
      </div>
    </section>

    <section class="hero" style={`background-image: url(${office.src});`}>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <p class="hero-subtitle">Bringing ideas to life through design & engineering.</p>
        <hr class="hero-rule" />
        <div class="hero-actions">
        </div>
      </div>
    </section>

    <section class="typography-showcase" style="background-color: white;">
      <div class="container">
        <!-- <h2 class="section-title">Typography</h2> -->
        <p class="typography-description">
          <br />
        </p>
      </div>
    </section>
</Layout>

